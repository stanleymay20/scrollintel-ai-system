{
  "default_provider": "local_encrypted",
  "rotation_enabled": true,
  "rotation_check_interval": 3600,
  "providers": {
    "local_encrypted": {
      "enabled": true,
      "master_key": "${SECRETS_MASTER_KEY}",
      "storage_path": "./data/secrets.enc",
      "backup_enabled": true,
      "backup_path": "./backups/secrets",
      "backup_retention_days": 30
    },
    "vault": {
      "enabled": false,
      "url": "${VAULT_URL}",
      "token": "${VAULT_TOKEN}",
      "mount_point": "secret",
      "namespace": "${VAULT_NAMESPACE}",
      "tls_verify": true,
      "timeout": 30,
      "retry_attempts": 3
    },
    "aws_secrets_manager": {
      "enabled": false,
      "region": "${AWS_REGION}",
      "access_key_id": "${AWS_ACCESS_KEY_ID}",
      "secret_access_key": "${AWS_SECRET_ACCESS_KEY}",
      "kms_key_id": "${AWS_KMS_KEY_ID}",
      "automatic_rotation": true
    },
    "azure_key_vault": {
      "enabled": false,
      "vault_url": "${AZURE_VAULT_URL}",
      "client_id": "${AZURE_CLIENT_ID}",
      "client_secret": "${AZURE_CLIENT_SECRET}",
      "tenant_id": "${AZURE_TENANT_ID}"
    }
  },
  "secret_types": {
    "database_password": {
      "rotation_interval_days": 90,
      "complexity_requirements": {
        "min_length": 16,
        "require_uppercase": true,
        "require_lowercase": true,
        "require_numbers": true,
        "require_special_chars": true
      },
      "auto_generate": true
    },
    "api_key": {
      "rotation_interval_days": 365,
      "length": 32,
      "auto_generate": true,
      "format": "hex"
    },
    "jwt_secret": {
      "rotation_interval_days": 180,
      "length": 64,
      "auto_generate": true,
      "format": "base64"
    },
    "encryption_key": {
      "rotation_interval_days": 365,
      "length": 32,
      "auto_generate": true,
      "format": "base64"
    },
    "certificate": {
      "rotation_interval_days": 365,
      "auto_generate": false,
      "validation_required": true
    },
    "private_key": {
      "rotation_interval_days": 730,
      "auto_generate": false,
      "validation_required": true,
      "key_size": 2048
    },
    "oauth_client_secret": {
      "rotation_interval_days": 180,
      "auto_generate": false
    },
    "webhook_secret": {
      "rotation_interval_days": 90,
      "length": 32,
      "auto_generate": true,
      "format": "hex"
    },
    "third_party_token": {
      "rotation_interval_days": 30,
      "auto_generate": false,
      "validation_required": true
    }
  },
  "security": {
    "encryption": {
      "algorithm": "AES-256-GCM",
      "key_derivation": "PBKDF2",
      "iterations": 100000,
      "salt_length": 32
    },
    "access_control": {
      "require_authentication": true,
      "allowed_roles": ["admin", "security_admin"],
      "audit_all_access": true,
      "rate_limiting": {
        "enabled": true,
        "max_requests_per_minute": 60
      }
    },
    "backup": {
      "enabled": true,
      "encryption_required": true,
      "retention_policy": {
        "daily_backups": 7,
        "weekly_backups": 4,
        "monthly_backups": 12
      },
      "offsite_backup": {
        "enabled": false,
        "provider": "s3",
        "bucket": "${BACKUP_BUCKET}",
        "encryption_key": "${BACKUP_ENCRYPTION_KEY}"
      }
    }
  },
  "monitoring": {
    "enabled": true,
    "log_access": true,
    "log_rotation": true,
    "log_failures": true,
    "alert_on_failures": true,
    "metrics": {
      "enabled": true,
      "endpoint": "/metrics/secrets",
      "include_counts": true,
      "include_rotation_status": true
    },
    "health_checks": {
      "enabled": true,
      "interval_seconds": 300,
      "timeout_seconds": 10,
      "alert_on_failure": true
    }
  },
  "rotation": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "advance_warning_days": 7,
    "notification_channels": [
      {
        "type": "email",
        "recipients": ["security-team@company.com"],
        "enabled": true
      },
      {
        "type": "slack",
        "webhook_url": "${SLACK_WEBHOOK_URL}",
        "channel": "#security-alerts",
        "enabled": false
      }
    ],
    "automatic_rotation": {
      "enabled": false,
      "allowed_secret_types": [
        "api_key",
        "jwt_secret",
        "webhook_secret"
      ],
      "require_approval": true,
      "rollback_on_failure": true
    }
  },
  "integration": {
    "ci_cd": {
      "enabled": true,
      "inject_method": "environment_variables",
      "allowed_pipelines": [
        "production-deploy",
        "staging-deploy",
        "security-tests"
      ]
    },
    "kubernetes": {
      "enabled": true,
      "secret_sync": true,
      "namespace": "scrollintel",
      "secret_name_prefix": "scrollintel-"
    },
    "docker": {
      "enabled": true,
      "secrets_mount_path": "/run/secrets",
      "file_permissions": "0400"
    }
  },
  "compliance": {
    "audit_logging": {
      "enabled": true,
      "log_level": "INFO",
      "include_metadata": true,
      "retention_days": 2555
    },
    "encryption_at_rest": {
      "required": true,
      "algorithm": "AES-256"
    },
    "encryption_in_transit": {
      "required": true,
      "min_tls_version": "1.2"
    },
    "access_reviews": {
      "enabled": true,
      "frequency_days": 90,
      "require_justification": true
    },
    "data_classification": {
      "enabled": true,
      "default_classification": "confidential",
      "classifications": {
        "public": {
          "encryption_required": false,
          "access_restrictions": []
        },
        "internal": {
          "encryption_required": true,
          "access_restrictions": ["authenticated"]
        },
        "confidential": {
          "encryption_required": true,
          "access_restrictions": ["authorized_roles"]
        },
        "restricted": {
          "encryption_required": true,
          "access_restrictions": ["security_admin"],
          "additional_approvals_required": true
        }
      }
    }
  },
  "development": {
    "mock_secrets": {
      "enabled": false,
      "use_in_testing": true,
      "prefix": "MOCK_"
    },
    "local_development": {
      "allow_env_fallback": true,
      "warn_on_env_usage": true,
      "require_local_secrets_file": false
    }
  },
  "disaster_recovery": {
    "backup_frequency": "daily",
    "backup_retention": "1 year",
    "cross_region_replication": {
      "enabled": false,
      "regions": ["us-west-2", "eu-west-1"]
    },
    "recovery_testing": {
      "enabled": true,
      "frequency": "monthly",
      "automated": false
    }
  }
}