# ===============================
# üåç Environment (Railway Optimized)
# ===============================
ENVIRONMENT=production
RAILWAY_ENVIRONMENT=production
DEBUG=false
APP_NAME=ScrollIntel
APP_VERSION=1.0.0
APP_URL=${RAILWAY_STATIC_URL:-https://scrollintel.com}
API_URL=${RAILWAY_STATIC_URL:-https://api.scrollintel.com}
FRONTEND_URL=${RAILWAY_STATIC_URL:-https://app.scrollintel.com}
PORT=${PORT:-8000}
HOST=0.0.0.0

# ===============================
# üîë Database (Railway will override with DATABASE_URL)
# ===============================
DATABASE_URL=${DATABASE_URL:-sqlite:///./scrollintel.db}
DB_HOST=${DB_HOST:-localhost}
DB_PORT=${DB_PORT:-5432}
DB_NAME=${DB_NAME:-scrollintel}
DB_USER=${DB_USER:-postgres}
DB_PASSWORD=${DB_PASSWORD:-}

# ===============================
# ‚ö° Redis (Railway will override with REDIS_URL)
# ===============================
REDIS_URL=${REDIS_URL:-redis://localhost:6379/0}
REDIS_CACHE_URL=${REDIS_CACHE_URL:-redis://localhost:6379/1}
REDIS_SESSION_URL=${REDIS_SESSION_URL:-redis://localhost:6379/2}
REDIS_QUEUE_URL=${REDIS_QUEUE_URL:-redis://localhost:6379/3}

# ===============================
# ü§ñ AI Provider Keys (Set these in Railway environment variables)
# ===============================
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GOOGLE_AI_API_KEY=${GOOGLE_AI_API_KEY}
HUGGINGFACE_API_TOKEN=${HUGGINGFACE_API_TOKEN}
STABILITY_API_KEY=${STABILITY_API_KEY}
REPLICATE_API_TOKEN=${REPLICATE_API_TOKEN}

# ===============================
# üîê Security (Set these in Railway environment variables)
# ===============================
JWT_SECRET_KEY=${JWT_SECRET_KEY}
SESSION_SECRET_KEY=${SESSION_SECRET_KEY}
SECRET_KEY=${SECRET_KEY}
CORS_ORIGINS=${RAILWAY_STATIC_URL:-https://scrollintel.com},https://app.scrollintel.com,https://scrollintel.com
ALLOWED_HOSTS=${RAILWAY_STATIC_URL:-scrollintel.com},app.scrollintel.com,api.scrollintel.com,*.railway.app

# ===============================
# üîë OAuth Configuration (Set these in Railway environment variables)
# ===============================
# Google OAuth
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GOOGLE_PROJECT_ID=scrollintel
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs

# GitHub OAuth
GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
GITHUB_CLIENT_SECRET=${GITHUB_CLIENT_SECRET}

# ===============================
# ‚òÅÔ∏è AWS Cloud (Set these in Railway environment variables)
# ===============================
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-east-1
AWS_S3_BUCKET=scrollintel-production
#
 ===============================
# üìß Email & Notifications
# ===============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@scrollintel.com
SMTP_PASS=your-app-password-here
SENDGRID_API_KEY=your-sendgrid-key-here

# ===============================
# üìä Analytics & Monitoring
# ===============================
GOOGLE_ANALYTICS_ID=your-ga-id-here
SENTRY_DSN=your-sentry-dsn-here
MIXPANEL_TOKEN=your-mixpanel-token-here

# ===============================
# üîí Additional Security (Set these in Railway environment variables)
# ===============================
ENCRYPTION_KEY=${ENCRYPTION_KEY}
API_RATE_LIMIT=1000
MAX_FILE_SIZE=100MB
SESSION_TIMEOUT=3600
BCRYPT_ROUNDS=12

# ===============================
# üåê CDN & Storage
# ===============================
CDN_URL=https://cdn.scrollintel.com
STATIC_URL=https://static.scrollintel.com
MEDIA_URL=https://media.scrollintel.com

# ===============================
# üöÄ Performance
# ===============================
CACHE_TTL=3600
MAX_CONNECTIONS=100
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000

# ===============================
# üîç Logging
# ===============================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/scrollintel/app.log
ERROR_LOG_FILE=/var/log/scrollintel/error.log

