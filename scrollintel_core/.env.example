# ================================
# ScrollIntel Core - Environment Configuration
# Copy this file to .env and update values
# ================================

# Application Settings
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
APP_NAME=ScrollIntel Core
APP_VERSION=1.0.0

# Database Configuration
POSTGRES_DB=scrollintel_core
POSTGRES_USER=scrollintel
POSTGRES_PASSWORD=scrollintel_secure_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
DATABASE_URL=postgresql://scrollintel:scrollintel_secure_password@localhost:5433/scrollintel_core

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_URL=redis://localhost:6380/0

# API Configuration
API_PORT=8001
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:8001"]

# File Processing
MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_DIR=uploads

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Service API Keys (Required)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Database Numbers
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2

# Docker Compose Settings
NODE_ENV=development
BUILD_TARGET=development