# ================================
# ScrollIntel Secure Environment Template
# ================================
# Copy this to .env and replace all placeholder values with real secrets

# === Environment Settings ===
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
BUILD_TARGET=production
NODE_ENV=production

# === Database Configuration ===
# Use strong, unique passwords for production
DATABASE_URL=postgresql://[USERNAME]:[SECURE_PASSWORD]@[HOST]:[PORT]/[DATABASE]
POSTGRES_HOST=[YOUR_POSTGRES_HOST]
POSTGRES_PORT=5432
POSTGRES_DB=scrollintel
POSTGRES_USER=[YOUR_POSTGRES_USER]
POSTGRES_PASSWORD=[GENERATE_SECURE_PASSWORD]

# === Redis Configuration ===
REDIS_HOST=[YOUR_REDIS_HOST]
REDIS_PORT=6379
REDIS_PASSWORD=[GENERATE_SECURE_REDIS_PASSWORD]
REDIS_DB=0

# === JWT & Security Configuration ===
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=[GENERATE_SECURE_JWT_SECRET]
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=[GENERATE_SECURE_ENCRYPTION_KEY]
WEBHOOK_SECRET=[GENERATE_SECURE_WEBHOOK_SECRET]

# === AI Services ===
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=[YOUR_OPENAI_API_KEY]
OPENAI_MODEL=gpt-4

# Get your Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=[YOUR_ANTHROPIC_API_KEY]
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# === Vector Database (Pinecone) ===
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=[YOUR_PINECONE_API_KEY]
PINECONE_ENVIRONMENT=us-east-1

# === Supabase ===
# Get from: https://supabase.com/dashboard/project/[project-id]/settings/api
SUPABASE_URL=[YOUR_SUPABASE_URL]
SUPABASE_KEY=[YOUR_SUPABASE_ANON_KEY]
SUPABASE_SERVICE_ROLE=[YOUR_SUPABASE_SERVICE_ROLE_KEY]
SUPABASE_JWT_SECRET=[YOUR_SUPABASE_JWT_SECRET]

# === File Storage ===
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# === Email Configuration ===
SMTP_SERVER=[YOUR_SMTP_SERVER]
SMTP_PORT=587
EMAIL_USERNAME=[YOUR_EMAIL_USERNAME]
EMAIL_PASSWORD=[YOUR_EMAIL_PASSWORD]
FROM_EMAIL=noreply@scrollintel.com

# === Monitoring & Analytics ===
SENTRY_DSN=[YOUR_SENTRY_DSN]
POSTHOG_API_KEY=[YOUR_POSTHOG_API_KEY]

# === Payment Processing ===
STRIPE_API_KEY=[YOUR_STRIPE_API_KEY]
STRIPE_WEBHOOK_SECRET=[YOUR_STRIPE_WEBHOOK_SECRET]

# === ScrollIntel Specific Configuration ===
AGENT_TIMEOUT=300
MAX_CONCURRENT_AGENTS=10
AGENT_MEMORY_LIMIT=1024
ORCHESTRATOR_POLLING_INTERVAL=5

# === ScrollIntel Features ===
ENABLE_VISUAL_GENERATION=true
ENABLE_BOARD_MASTERY=true
ENABLE_CRISIS_LEADERSHIP=true
ENABLE_CULTURAL_TRANSFORMATION=true
ENABLE_QUANTUM_AI=false

# === ScrollIntel API Configuration ===
API_RATE_LIMIT=1000
API_BURST_LIMIT=100
WEBSOCKET_MAX_CONNECTIONS=1000
FILE_UPLOAD_MAX_SIZE=100

# === ScrollIntel Security ===
# Generate unique keys for production
SCROLLINTEL_MASTER_KEY=[GENERATE_SECURE_MASTER_KEY]
AGENT_COMMUNICATION_KEY=[GENERATE_SECURE_AGENT_KEY]
VAULT_ENCRYPTION_KEY=[GENERATE_SECURE_VAULT_KEY]
AUDIT_SIGNING_KEY=[GENERATE_SECURE_AUDIT_KEY]

# === Frontend Configuration ===
NEXT_PUBLIC_API_URL=https://api.scrollintel.com
NEXT_PUBLIC_WS_URL=wss://api.scrollintel.com
NEXT_PUBLIC_APP_NAME=ScrollIntel
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_SUPABASE_URL=[YOUR_SUPABASE_URL]
NEXT_PUBLIC_SUPABASE_ANON_KEY=[YOUR_SUPABASE_ANON_KEY]

# === Development Settings ===
ENABLE_CORS=true
CORS_ORIGINS=https://scrollintel.com,https://app.scrollintel.com

# === Optimization Configuration ===
ENABLE_LAZY_LOADING=true
ENABLE_MEMORY_OPTIMIZATION=true
ENABLE_ULTRA_PERFORMANCE=true
ENABLE_QUANTUM_OPTIMIZATION=true
ENABLE_INTELLIGENT_RESOURCES=true
OPTIMIZATION_LEVEL=MAXIMUM

# === Performance Tuning ===
MAX_WORKERS=8
ASYNC_POOL_SIZE=16
CACHE_SIZE=1000
GC_THRESHOLD=700