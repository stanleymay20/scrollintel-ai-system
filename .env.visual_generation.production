# ScrollIntel Visual Generation Production Configuration

# Core Settings
VISUAL_GENERATION_ENABLED=true
VISUAL_GENERATION_MODE=production
VISUAL_GENERATION_LOG_LEVEL=INFO

# Performance Settings
VISUAL_GENERATION_MAX_CONCURRENT=50
VISUAL_GENERATION_GPU_MEMORY_FRACTION=0.8
VISUAL_GENERATION_CACHE_ENABLED=true
VISUAL_GENERATION_CACHE_TTL_HOURS=24

# Quality Settings
VISUAL_GENERATION_DEFAULT_QUALITY=ultra_high
VISUAL_GENERATION_AUTO_ENHANCE=true
VISUAL_GENERATION_QUALITY_THRESHOLD=0.9

# Cost Optimization
VISUAL_GENERATION_PREFER_LOCAL=true
VISUAL_GENERATION_API_FALLBACK=true
VISUAL_GENERATION_DAILY_COST_LIMIT=100.0

# Security Settings
VISUAL_GENERATION_CONTENT_FILTERING=true
VISUAL_GENERATION_WATERMARKING=false
VISUAL_GENERATION_MAX_FILE_SIZE_MB=500

# Model Paths (Local Models - No API Keys Required)
VISUAL_GENERATION_LOCAL_SD_PATH=./models/local_stable_diffusion
VISUAL_GENERATION_PROPRIETARY_VIDEO_PATH=./models/proprietary_video_engine

# Optional API Keys (For Premium Features)
# STABILITY_API_KEY=your_stability_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here
# MIDJOURNEY_API_KEY=your_midjourney_api_key_here

# Infrastructure Settings
VISUAL_GENERATION_STORAGE_PATH=./generated_content
VISUAL_GENERATION_TEMP_PATH=./temp
VISUAL_GENERATION_MODELS_PATH=./models

# Monitoring and Metrics
VISUAL_GENERATION_METRICS_ENABLED=true
VISUAL_GENERATION_PROMETHEUS_PORT=9090
VISUAL_GENERATION_HEALTH_CHECK_INTERVAL=30

# WebSocket Settings
VISUAL_GENERATION_WS_ENABLED=true
VISUAL_GENERATION_WS_MAX_CONNECTIONS=1000

# Database Settings (for job tracking)
VISUAL_GENERATION_DB_URL=postgresql://user:password@localhost:5432/scrollintel_visual
VISUAL_GENERATION_DB_POOL_SIZE=20

# Redis Settings (for caching and queuing)
VISUAL_GENERATION_REDIS_URL=redis://localhost:6379/2
VISUAL_GENERATION_REDIS_MAX_CONNECTIONS=50

# GPU Settings
VISUAL_GENERATION_GPU_ENABLED=true
VISUAL_GENERATION_GPU_DEVICE=auto
VISUAL_GENERATION_CUDA_VISIBLE_DEVICES=0,1,2,3

# Competitive Advantages (ScrollIntel Superiority)
SCROLLINTEL_ADVANTAGE_COST=FREE_LOCAL_GENERATION
SCROLLINTEL_ADVANTAGE_QUALITY=ULTRA_REALISTIC_4K_60FPS
SCROLLINTEL_ADVANTAGE_SPEED=10X_FASTER_THAN_COMPETITORS
SCROLLINTEL_ADVANTAGE_FEATURES=PHYSICS_HUMANOIDS_NEURAL_RENDERING